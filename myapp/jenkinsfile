pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the code from the repository
                git url: 'https://github.com/surajnikam0/demo-project.git', branch: 'master'
            }
        }

        stage('Set Up Python Environment') {
            steps {
                script {
                    // Set up Python environment (using virtualenv)
                    sh '''#!/bin/bash
                    # Create and activate a virtual environment
                    python3 -m venv venv
                    source venv/bin/activate

                    # Install dependencies from requirements.txt (if it exists)
                    pip install --upgrade pip
                    pip install -r requirements.txt || echo "No requirements.txt found."
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests (using pytest, you can modify this for other frameworks)
                    sh '''#!/bin/bash
                    source venv/bin/activate
                    pytest --maxfail=1 --disable-warnings -q || echo "Tests failed."
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Example placeholder for deployment steps
                    echo 'Deploying the Python application...'
                    // Replace with actual deployment commands
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment succeeded!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
        always {
            echo 'This will always run, regardless of build success or failure.'
        }
    }
}
